<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@color/colorBack">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_back"
        android:padding="5dp">

        <ImageView
            android:id="@+id/productImageProLay"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/look_book"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/productNameProLay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productImageProLay"
            android:layout_centerHorizontal="true"
            android:text="Hair Wax"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/productPriceProLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productNameProLay"
            android:layout_alignParentStart="true"
            android:text="$25"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/addToCartProLay"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_below="@+id/productNameProLay"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_cart"/>

    </RelativeLayout>

</RelativeLayout>