<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBack"
    android:padding="20dp"
    tools:context=".ForgotPassActivity">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="0dp"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/hallaka_logo" />

    <EditText
        android:id="@+id/emailForgotPass"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/logoImage"
        android:layout_marginTop="0dp"
        android:ems="100"
        android:fontFamily="sans-serif"
        android:paddingStart="15dp"
        android:paddingEnd="15sp"
        android:hint="Enter your Email to get Password"
        android:background="@drawable/back_lay_border_gray"
        android:inputType="textEmailAddress"
        android:autofillHints="" />

    <Button
        android:id="@+id/sendForgotPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailForgotPass"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="20dp"
        android:text="Send Password"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/backForgotPass"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sendForgotPass"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="15dp"
        android:text="Back"
        android:fontFamily="sans-serif"
        android:textStyle="italic"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="15sp"/>

</RelativeLayout>